{% if entities is not empty %}
<div class="row bg-bottom2top cslider front-box-shadow">                    
    <div class="col-md-12 badge-front more-visits">
        <b class="floatingtag">{{ 'front.visitslider.header' | trans }}</b>
        <img class="img-responsive" src="{{ asset('bundles/front/images/badge.png') }}" alt="{{ 'front.visitslider.header' | trans }}"/>
    </div>
    <div class="col-md-12">
        <div>
            <!-- Jssor Slider Begin -->
            <!-- You can move inline styles to css file or css block. -->
            <div id="cover_visitslider">
                <!-- Slides Container -->
                <div data-u="slides" class="slides">
                    {% for entity in entities %}
                    <div>
                        <div data-u=image>
                            {% if entity.webPath %}
                                {% set img_src = entity.webPath %}
                            {% else %}
                                {% set img_src = 'assets/front/listado.png' %}
                            {% endif %}
                            <img data-u="image" src="{{ asset( img_src )}}" alt="{{ entity.name }}"/>
                            <div class="jssorprice">
                                <h3><a href="{{ path(entity.entityroute, { 'slug' : entity.slug }) }}">{{ entity.name }}</a></h3>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <!-- Arrow Left -->
                <span data-u="arrowleft" class="icon-chevron-left jssora03l">
                </span>
                <!-- Arrow Right -->
                <span data-u="arrowright" class="icon-chevron-right jssora03r">
                </span>
                <!-- Arrow Navigator Skin End -->
            </div>
            <!-- Jssor Slider End -->  
        </div>
    </div>
</div>
{% endif %}