<!-- BEGIN PAGE CONTAINER-->

<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">     
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            {{ 'admin.contact.module' | trans }} <small> {{ 'admin.contact.description' | trans }}</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="{{ path('admin_index') }}">Dashboard</a>
                <i class="icon-angle-right"></i>
            </li>

            <li class="active">{{ 'admin.contact.module' | trans }}</li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->
<div class="row">
    <div class="inbox col-md-3 menu-list">
        <ul class="inbox-nav margin-bottom-10">

            <li class="inbox active contact">
                <a action="list" url="{{ path('admin_contact_list') }}" data-parent_name="contact" data-title="Inbox" class="btn" href="javascript:;"> <i class="icon-list"></i> contact
                </a>
                <b></b>
            </li>

            <li class="inbox  mailing">
                <a action="list" url="{{ path('admin_mailing_list') }}" data-parent_name="mailing" data-title="Inbox" class="btn" href="javascript:;"> <i class="icon-list"></i> mailing
                </a>
                <b></b>
            </li>
            <li class="inbox  commentvisitors">
                <a action="list" url="{{ path('admin_commentvisitors_list') }}" data-parent_name="commentvisitors" data-title="Inbox" class="btn" href="javascript:;"> <i class="icon-list"></i> commentvisitors
                </a>
                <b></b>
            </li>

        </ul>
    </div>
    <div class="col-md-9 admin-entity-viewer" id="admin-contact-viewer">
        {% include 'CommentBundle:Contact:list.html.twig' %}
    </div>
</div>

<script type="text/javascript">

    $('a[action=list]').on('click', function(e) {
        var url = $(this).attr('url');
        var parent = $(this).attr('data-parent_name');
        e.preventDefault();
        var pageContent = $('.admin-entity-viewer');
        App.blockUI(pageContent, false);
        $('.admin-entity-viewer').load(url, function() {
            $('.inbox-nav > li.active').removeClass('active');
            $('.inbox-nav > li.' + parent).addClass('active');
            App.unblockUI(pageContent);
        });
    });
</script>


