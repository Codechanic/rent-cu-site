                <tr><th>{{'admin.settings.email' | trans}}</th><td>{{ entity.email }}</td></tr>
                <tr><th>{{'admin.settings.address' | trans}}</th><td>{{ entity.address }}</td></tr>
                <tr><th>{{'admin.settings.phones' | trans}}</th><td>{{ entity.phones }}</td></tr>
                <tr><th>{{'admin.settings.contactdescription' | trans}}</th><td>{{ entity.contactdescription | raw }}</td></tr>
                
                <tr><th>{{'admin.settings.aboutus' | trans}}</th><td>{{ entity.aboutus | raw }}</td></tr>

