<div class="portlet box {{color_portlet}}">
    <div class="portlet-title">

        <div class="actions">
            <div class="btn-group">
                <a class="btn {{ color_button_edit }}" action="ajax-modal" href="{{ path('admin_settings_edit', {'id': entity.id}) }}" data-toggle="tooltip" title="{{ 'admin.action.edit' | trans }}"><i class="icon-edit"></i> {{ 'admin.action.edit' | trans }}</a>
            </div>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <tr><th class="col-md-2">{{'admin.settings.name' | trans}}</th><td>{{ entity.name }}</td></tr>
