                <tr><th>{{'admin.settings.metatitle' | trans}}</th><td>{{ entity.metatitle }}</td></tr>
                <tr><th>{{'admin.settings.metakeywords' | trans}}</th><td>{{ entity.metakeywords }}</td></tr>
                <tr><th>{{'admin.settings.metadescription' | trans}}</th><td>{{ entity.metadescription }}</td></tr>
